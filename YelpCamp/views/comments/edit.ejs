<% include ../partials/header.ejs %>

 <div class="container">
	<h1 class="text-center"> Edit Comment </h1>
	<div style="width:40%; margin: 30px auto;">
		<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control form-control-lg" type="text" name="comment[text]" value="<%= comment.text %>">
			</div>
			<div class="form-group">	
				<button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
	<a href="/campgrounds" >Go Back</a>
	</div>
</div>


